<h1>Pirate</h1>

<div class="pirate">
  <h2>Pirate Name: <%= @pirate.name %></h2><br>
  <h2>Pirate Weight: <%= @pirate.weight %> pounds</h2><br>
  <h2>Pirate Height: <%= @pirate.height %> inches</h2><br>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Ship Name: <%= ship.name %></p>
    <p>Ship Type: <%= ship.type %></p>
    <p>Ship Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
